<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SportsDrawerList">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:choiceMode">none</item>
        <item name="android:divider">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:cacheColorHint">@android:color/white</item>
    </style>

    <style name="SportsDrawerBaseText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff212121</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SportsDrawerSelectedText" parent="SportsDrawerBaseText">
        <item name="android:textColor">@color/theme_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#ffeeeeee</item>
    </style>

    <style name="ScheduleTeamList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:textIsSelectable">true</item>
    </style>

</resources>
